generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drinks {
  id String @id @default(uuid())

  name String

  teor_alcoholic Float?

  purchases PurchaseEnd[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Category {
  id String @id @default(uuid())

  description String
  slug        String @unique

  purchaseEndOn PurchaseEnd[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model PurchaseEnd {
  id String @id @default(uuid())

  drinks   Drinks @relation(fields: [drinksId], references: [id])
  drinksId String

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  canceledAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
